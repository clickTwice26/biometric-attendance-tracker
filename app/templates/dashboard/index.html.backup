{% extends "base.html" %}

{% block title %}Dashboard - Fingerprint Attendance{% endblock %}

{% block page_header %}
    <i class="fas fa-home mr-2"></i> Dashboard
{% endblock %}

{% block content %}
<div class="space-y-6">
    
    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Total Students -->
        <div class="bg-white overflow-hidden shadow-lg rounded-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">
                            Total Students
                        </p>
                        <p class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-blue-400 bg-clip-text text-transparent">
                            {{ total_students }}
                        </p>
                    </div>
                    <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl shadow-lg">
                        <i class="fas fa-users text-2xl text-white"></i>
                    </div>
                </div>
            </div>
            <div class="bg-gradient-to-r from-blue-50 to-blue-100 px-6 py-3 border-t border-blue-100">
                <a href="{{ url_for('frontend.students_list') }}" class="text-sm font-medium text-blue-700 hover:text-blue-900 flex items-center">
                    View all <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
        
        <!-- Total Classes -->
        <div class="bg-white overflow-hidden shadow-lg rounded-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">
                            Active Classes
                        </p>
                        <p class="text-4xl font-bold bg-gradient-to-r from-green-600 to-green-400 bg-clip-text text-transparent">
                            {{ total_classes }}
                        </p>
                    </div>
                    <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl shadow-lg">
                        <i class="fas fa-book text-2xl text-white"></i>
                    </div>
                </div>
            </div>
            <div class="bg-gradient-to-r from-green-50 to-green-100 px-6 py-3 border-t border-green-100">
                <a href="{{ url_for('frontend.classes_list') }}" class="text-sm font-medium text-green-700 hover:text-green-900 flex items-center">
                    View all <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
        
        <!-- Today's Attendance -->
        <div class="bg-white overflow-hidden shadow-lg rounded-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">
                            Today's Attendance
                        </p>
                        <p class="text-4xl font-bold bg-gradient-to-r from-purple-600 to-purple-400 bg-clip-text text-transparent">
                            {{ today_attendance }}
                        </p>
                    </div>
                    <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl shadow-lg">
                        <i class="fas fa-clipboard-check text-2xl text-white"></i>
                    </div>
                </div>
            </div>
            <div class="bg-gradient-to-r from-purple-50 to-purple-100 px-6 py-3 border-t border-purple-100">
                <a href="{{ url_for('frontend.attendance_list') }}" class="text-sm font-medium text-purple-700 hover:text-purple-900 flex items-center">
                    View all <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
        
        <!-- Active Devices -->
        <div class="bg-white overflow-hidden shadow-lg rounded-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">
                            Total Devices
                        </p>
                        <p class="text-4xl font-bold bg-gradient-to-r from-orange-600 to-orange-400 bg-clip-text text-transparent">
                            {{ total_devices }}
                        </p>
                    </div>
                    <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl shadow-lg">
                        <i class="fas fa-microchip text-2xl text-white"></i>
                    </div>
                </div>
            </div>
            <div class="bg-gradient-to-r from-orange-50 to-orange-100 px-6 py-3 border-t border-orange-100">
                <a href="{{ url_for('frontend.devices_list') }}" class="text-sm font-medium text-orange-700 hover:text-orange-900 flex items-center">
                    Manage <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Two Column Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Attendance -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-clock text-indigo-600 mr-2"></i>
                    Recent Attendance
    <!-- Two Column Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="p-6">
                {% if recent_attendance %}
                    <div class="space-y-3 max-h-96 overflow-y-auto">
                        {% for att in recent_attendance %}
                            <div class="flex items-center justify-between p-4 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl hover:shadow-md transition-shadow border border-gray-200">
                                <div class="flex items-center space-x-4">
                                    <div class="flex-shrink-0">
                                        <div class="h-12 w-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <p class="text-sm font-semibold text-gray-900">
                                            {{ att.student.name }}
                                        </p>
                                        <p class="text-xs text-gray-600 flex items-center mt-1">
                                            <i class="fas fa-book mr-1"></i>
                                            {% if att.class_obj %}{{ att.class_obj.name }}{% else %}No Class{% endif %}
                                        </p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold shadow-sm
                                        {% if att.status == 'present' %}bg-gradient-to-r from-green-400 to-green-600 text-white
                                        {% elif att.status == 'late' %}bg-gradient-to-r from-yellow-400 to-yellow-600 text-white
                                        {% else %}bg-gradient-to-r from-red-400 to-red-600 text-white{% endif %}">
                                        {{ att.status.capitalize() }}
                                    </span>
                                    <p class="text-xs text-gray-500 mt-2 flex items-center justify-end">
                                        <i class="fas fa-clock mr-1"></i>
                                        {{ att.timestamp.strftime('%I:%M %p') }} BDT
                                    </p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-12">
                        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-4">
                            <i class="fas fa-inbox text-4xl text-gray-400"></i>
                        </div>
                        <p class="text-gray-500 font-medium">No attendance records yet</p>
        
        <!-- Device Status -->
        <div class="bg-white shadow-lg rounded-xl overflow-hidden">
            <div class="bg-gradient-to-r from-orange-500 to-red-600 px-6 py-4">
                <h2 class="text-lg font-bold text-white flex items-center">
                    <i class="fas fa-microchip mr-3"></i>
                    Device Status
                </h2>
            </div>lass="px-6 py-4 border-b border-gray-200">
            <div class="p-6">
                {% if devices %}
                    <div class="space-y-4 max-h-96 overflow-y-auto">
                        {% for device in devices %}
                            <div class="bg-gradient-to-r from-gray-50 to-gray-100 border-l-4 border-orange-500 rounded-lg p-4 hover:shadow-md transition-shadow">
                                <div class="flex items-center justify-between mb-3">
                                    <h3 class="text-sm font-bold text-gray-900 flex items-center">
                                        <i class="fas fa-circle text-xs mr-2 {% if device.mode == 'attendance' %}text-green-500 animate-pulse{% else %}text-blue-500{% endif %}"></i>
                                        {{ device.name }}
                                    </h3>
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold shadow-sm
                                        {% if device.mode == 'attendance' %}bg-gradient-to-r from-green-400 to-green-600 text-white
                                        {% elif device.mode == 'enrollment' %}bg-gradient-to-r from-blue-400 to-blue-600 text-white
                                        {% else %}bg-gradient-to-r from-gray-400 to-gray-600 text-white{% endif %}">
                                        {{ device.mode.capitalize() }}
                                    </span>
                                </div>
                                <div class="space-y-2">
                                    <p class="text-xs text-gray-600 flex items-center">
                                        <i class="fas fa-map-marker-alt mr-2 text-orange-500"></i>
                                        {{ device.location or 'No location' }}
                                    </p>
                                    {% if device.current_class %}
                                        <p class="text-xs text-gray-600 flex items-center">
                                            <i class="fas fa-book mr-2 text-orange-500"></i>
                                            Current Class: <span class="font-semibold ml-1">{{ device.current_class.name }}</span>
                                        </p>
                                    {% endif %}
                                    <p class="text-xs text-gray-500 flex items-center pt-2 border-t border-gray-300">
                                        <i class="fas fa-clock mr-2"></i>
                                        Last seen: {{ device.last_seen.strftime('%b %d, %I:%M %p') if device.last_seen else 'Never' }}
                                    </p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-12">
                        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-4">
                            <i class="fas fa-microchip text-4xl text-gray-400"></i>
                        </div>
                        <p class="text-gray-500 font-medium">No devices configured</p>
    <!-- Quick Actions -->
    <div class="bg-white shadow-lg rounded-xl overflow-hidden">
        <div class="bg-gradient-to-r from-pink-500 to-purple-600 px-6 py-4">
            <h2 class="text-lg font-bold text-white flex items-center">
                <i class="fas fa-bolt mr-3"></i>
                Quick Actions
            </h2>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <a href="{{ url_for('frontend.student_add') }}" 
                   class="group flex flex-col items-center justify-center p-6 bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl hover:from-blue-100 hover:to-blue-200 transition-all hover:shadow-lg hover:-translate-y-1">
                    <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl mb-3 group-hover:scale-110 transition-transform shadow-lg">
                        <i class="fas fa-user-plus text-2xl text-white"></i>
                    </div>
                    <span class="text-sm font-semibold text-gray-900">Add Student</span>
                </a>
                
                <a href="{{ url_for('frontend.class_add') }}" 
                   class="group flex flex-col items-center justify-center p-6 bg-gradient-to-br from-green-50 to-green-100 rounded-xl hover:from-green-100 hover:to-green-200 transition-all hover:shadow-lg hover:-translate-y-1">
                    <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl mb-3 group-hover:scale-110 transition-transform shadow-lg">
                        <i class="fas fa-book-medical text-2xl text-white"></i>
                    </div>
                    <span class="text-sm font-semibold text-gray-900">Add Class</span>
                </a>
                
                <a href="{{ url_for('frontend.attendance_list') }}" 
                   class="group flex flex-col items-center justify-center p-6 bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl hover:from-purple-100 hover:to-purple-200 transition-all hover:shadow-lg hover:-translate-y-1">
                    <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl mb-3 group-hover:scale-110 transition-transform shadow-lg">
                        <i class="fas fa-list text-2xl text-white"></i>
                    </div>
                    <span class="text-sm font-semibold text-gray-900">View Attendance</span>
                </a>
                
                <a href="{{ url_for('frontend.reports') }}" 
                   class="group flex flex-col items-center justify-center p-6 bg-gradient-to-br from-orange-50 to-orange-100 rounded-xl hover:from-orange-100 hover:to-orange-200 transition-all hover:shadow-lg hover:-translate-y-1">
                    <div class="flex items-center justify-center w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl mb-3 group-hover:scale-110 transition-transform shadow-lg">
                        <i class="fas fa-file-alt text-2xl text-white"></i>
                    </div>
                    <span class="text-sm font-semibold text-gray-900">Generate Report</span>
                </a>
            </div>
        </div>
    </div>         class="flex flex-col items-center justify-center p-6 border-2 border-dashed border-gray-300 rounded-lg hover:border-indigo-500 hover:bg-indigo-50 transition">
                    <i class="fas fa-list text-3xl text-indigo-600 mb-2"></i>
                    <span class="text-sm font-medium text-gray-900">View Attendance</span>
                </a>
                
                <a href="{{ url_for('frontend.reports') }}" 
                   class="flex flex-col items-center justify-center p-6 border-2 border-dashed border-gray-300 rounded-lg hover:border-indigo-500 hover:bg-indigo-50 transition">
                    <i class="fas fa-file-alt text-3xl text-indigo-600 mb-2"></i>
                    <span class="text-sm font-medium text-gray-900">Generate Report</span>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
